{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "babel",
    "react",
    "promise",
    "flowtype",
    "flowtype-errors"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "jsx-quotes"                : ["error", "prefer-double"],
    "object-curly-spacing"      : ["error", "always"],
    "flowtype-errors/show-errors": 2
  }
}
